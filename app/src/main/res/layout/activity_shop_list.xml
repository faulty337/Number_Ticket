            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_weight="0"
                android:paddingTop="7dp"
                android:paddingLeft="20dp"
                android:text="제주도 제주시 ---------"
                android:textSize="20dp"
